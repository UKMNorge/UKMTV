{% extends "Layout/Layout.html.twig" %}

{% block content %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-8 pt-3">
				<p class="lead">
					Her finner du filmer av deltakere på UKM fra de siste tre årene. 
					Kanskje finner du deg selv eller noen du kjenner?
				</p>
				
				<h2>Søk</h2>
				{% embed "Sok/form.html.twig" %}{% endembed %}
			</div>
			<div class="col-12 col-md-4">
				<h3>Finn filmer fra</h3>
				<ol class="list-unstyled">
					<li class="my-2">
						<a href="{{ url('ukmn_tvgui_festivalen_homepage') }}" class="btn btn-block btn-outline-primary">
							{{ UKMDesign.getSitemap().getPage('ukmtv', 'festival').getTitle() }}
						</a>
					</li>

					<li class="my-2">
						<a href="{{ url('ukmn_tvgui_fylke_homepage') }}" class="btn btn-block btn-outline-primary">
							{{ UKMDesign.getSitemap().getPage('ukmtv', 'fylke').getTitle() }}
						</a>
					</li>

					<li class="my-2">
						<a href="{{ url('ukmn_tvgui_lokal_homepage') }}" class="btn btn-block btn-outline-primary">
							{{ UKMDesign.getSitemap().getPage('ukmtv', 'lokal').getTitle() }}
						</a>
					</li>
				</ol>
			</div>
		</div>
	</div>
{% endblock %}
